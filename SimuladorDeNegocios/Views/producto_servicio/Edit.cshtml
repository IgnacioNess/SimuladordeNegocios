                <span asp-validation-for="precio_publico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datos_empre_id_empresa" class="control-label"></label>
                <input asp-for="datos_empre_id_empresa" class="form-control" />
