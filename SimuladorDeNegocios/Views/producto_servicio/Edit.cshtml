            <div class="form-group">
                <label asp-for="unidad_produccion" class="control-label"></label>
                <input asp-for="unidad_produccion" class="form-control" />
                <span asp-validation-for="unidad_produccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produccion_mensual" class="control-label"></label>
                <input asp-for="produccion_mensual" class="form-control" />
                <span asp-validation-for="produccion_mensual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costo_unitario" class="control-label"></label>
